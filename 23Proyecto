#include<stdio.h>
//Stephany Danae Perez Retana
//Leer el numero e imprimir dia de la semana.

main () {
//Declaro variables
int numero;

//Imprimo mensaje en la pantalla
printf ("Ingresa un numero: ");
scanf ("%d", &numero);

switch (numero)
{
    case 1:
    printf("Lunes\n");
    break;

    case 2:
    printf("Martes\n");
    break;

    case 3:
    printf("Miercoles\n");
    break;

    case 4:
    printf("Jueves\n");
    break;

    case 5:
    printf("Viernes\n");
    break;

    case 6:
    printf("Sabado\n");
    break;

    case 7:
    printf("Domingo\n");
    break;

    default:
    printf("Opcion invalida\n");
    break;

}

}
