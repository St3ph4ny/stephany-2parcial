#include<stdio.h>
//Stephany Danae Perez Retana
//Sumar 2 numero y saber si es positiva o negativa

main () {
//Declaro variables
int numero_1;
int numero_2;
int total;

printf ("Ingresa un numero: ");
scanf ("%d", &numero_1);

printf ("Ingresa otro numero: ");
scanf ("%d", &numero_2);

total = (numero_1 + numero_2);

printf("La suma es de es: %d \n", total);


if (total > 0)
    printf("El numero es positivo \n");
else
    printf("El numero es negativo \n");
}
