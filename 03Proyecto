#include<stdio.h>
//Stephany Danae Perez Retana
//Calcula calificacion final de 4 calificaciones.

main () {
//Declaro variables
float var1;
float var2;
float var3;
float var4;
float promedio;

//Imprimo mensaje en la pantalla
printf ("Ingresa la calificacion numero 1:\n");

//Guardo el valor ingresado en la variable
scanf ("%f", &var1);

printf ("Ingresa la calificacion numero 2:\n");
scanf ("%f", &var2);

printf ("Ingresa la calificacion numero 3:\n");
scanf ("%f", &var3);


printf ("Ingresa la calificacion numero 4:\n");
scanf ("%f", &var4);


//Realizo el promedio
promedio = (var1 + var2 + var3 + var4) / 4;

printf("El promedio de mis 4 calificaciones es: %.2f \n", promedio);
}
