float billete;
float cambio;

printf ("El costo del dulce es de $ 10 pesos: \n");

//Imprimo mensaje en la pantalla
printf ("Cuantos dulces quiere comprar?: ");

//Guardo el valor ingresado en la variable
scanf ("%f", &dulces);

printf ("Ingresa el valor del billete con el que paga: ");
scanf ("%f", &billete);

cambio = billete - (costo * dulces);

printf ("\n\nTu cambio es de %.2f:", cambio );



//Realizo la suma
